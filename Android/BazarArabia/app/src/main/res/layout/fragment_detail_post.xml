<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view_article_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/detailed_post_image_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/divider_top1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/detail_activity_robototext_tb_margin"
        android:layout_marginBottom="@dimen/detail_activity_robototext_tb_margin"
        android:padding = "@dimen/detail_activity_padding"
        >

        <bazararabia.com.and.font.RobotoTextView
            android:id="@+id/detail_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_title"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_marginBottom="@dimen/detail_activity_robototext_tb_margin"
            app:typeface="robotoLight" />

        <bazararabia.com.and.font.RobotoTextView
            android:id="@+id/detail_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_description"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/detail_activity_robototext_tb_margin"
            app:typeface="robotoLight" />


    </LinearLayout>
    <View
        android:id="@+id/divider_top2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding = "@dimen/detail_activity_padding">
        <ImageView
            app:srcCompat="@drawable/account_circle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tint="@color/material_grey_500"
            android:id="@+id/detailed_post_account_photo" />
        <bazararabia.com.and.font.RobotoTextView
            android:id="@+id/detail_user_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/detail_activity_margin_left"
            android:layout_toRightOf="@+id/detailed_post_account_photo"
            android:textStyle="bold"
            app:typeface="robotoLight"
            />
        <bazararabia.com.and.font.RobotoTextView
            android:id="@+id/detail_verified_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verified"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_below="@+id/detail_user_name_text"
            android:layout_toRightOf="@+id/detailed_post_account_photo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/detail_activity_margin_left"
            app:typeface="robotoLight"
            />
        <bazararabia.com.and.font.RobotoTextView
            android:id="@+id/detail_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member since 24-12-2011"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_below="@+id/detail_verified_text"
            android:layout_toRightOf="@+id/detailed_post_account_photo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/detail_activity_margin_left"
            app:typeface="robotoLight"
            />
    </RelativeLayout>
    <View
        android:id="@+id/divider_top3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/darker_gray" />

</LinearLayout>